<body>
  <h1>ðŸŽ¬ Free AI Video Generator</h1>
  <input id="prompt" type="text" placeholder="Enter your video idea..." />
  <button onclick="generateVideo()">Generate Video</button>

  <div id="output"></div>

  <script>
    async function generateVideo() {
      const prompt = document.getElementById("prompt").value;
      const output = document.getElementById("output");
      output.innerHTML = "Generating video... Please wait.";

      // Replace with your actual Replicate API token
      const apiToken = "YOUR_API_TOKEN";

      const response = await fetch("https://api.replicate.com/v1/predictions", {
        method: "POST",
        headers: {
          "Authorization": `Token ${apiToken}`,
          "Content-Type": "application/json"
        },
        body: JSON.stringify({
          version: "e57c24f5b3266dbe4e05825aef50f86cceff3664e28cd09303b6b16304b8e2dd", // Example model ID
          input: { prompt }
        })
      });

      const prediction = await response.json();
      output.innerHTML = `<p>Video is being created...</p>`;

      // Poll until the video is ready
      let result;
      while (!result) {
        const check = await fetch(`https://api.replicate.com/v1/predictions/${prediction.id}`, {
          headers: { "Authorization": `Token ${apiToken}` }
        });
        const data = await check.json();
        if (data.status === "succeeded") {
          result = data.output[0];
          output.innerHTML = `<video controls src="${result}"></video>`;
        } else if (data.status === "failed") {
          output.innerHTML = "Video generation failed.";
          break;
        }
        await new Promise(r => setTimeout(r, 3000));
      }
    }
  </script>
</body>
